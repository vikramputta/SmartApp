<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <Dialog title="Start Tracking" class="sapUiPopupWithPadding">
        <content>
            <Label text="Track:" />
            <Input id="iTrack" />
        </content>
        <beginButton>
            <Button text="Ok" id="ok" press="handleStartDialogClose" />
        </beginButton>
        <endButton>
            <Button text="Cancel" id="can" press="handleStartDialogClose" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>
